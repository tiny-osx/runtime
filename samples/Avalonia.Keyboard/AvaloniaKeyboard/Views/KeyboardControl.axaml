							<TextBlock Classes="k1" Text="i" />
						</Border>
						<Border
                            Name="Pad09"
                            Grid.Column="8"
                            Classes="k1">
							<TextBlock Classes="k1" Text="o" />
						</Border>
						<Border
                            Name="Pad10"
                            Grid.Column="9"
                            Classes="k1">
							<TextBlock Classes="k1" Text="p" />
						</Border>
					</Grid>
					<Grid ColumnDefinitions=".5*,*,*,*,*,*,*,*,*,*,.5*">
						<Border
                            Name="Pad11"
                            Grid.Column="1"
                            Classes="k1">
							<TextBlock Classes="k1" Text="a" />
						</Border>
						<Border
                            Name="Pad12"
                            Grid.Column="2"
                            Classes="k1">
							<TextBlock Classes="k1" Text="s" />
